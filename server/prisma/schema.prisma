generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @unique
  email          String    @unique
  password       String
  isVerified     Boolean   @default(false)
  isActive       Boolean   @default(false)
  activationCode Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  expiresAt      DateTime
  UserChatOne    Chat[]    @relation("UserChatOne")
  UserChatTwo    Chat[]    @relation("UserChatTwo")
  messages       Message[]

  @@map("users")
}

model Chat {
  id          Int       @id @default(autoincrement())
  userOneId   String
  userTwoId   String
  UserChatOne User      @relation("UserChatOne", fields: [userOneId], references: [id])
  UserChatTwo User      @relation("UserChatTwo", fields: [userTwoId], references: [id])
  messages    Message[]

  @@map("chats")
}

model Message {
  id       Int    @id @default(autoincrement())
  chatId   Int
  message  String @db.Text
  senderId String
  chat     Chat   @relation(fields: [chatId], references: [id])
  sender   User   @relation(fields: [senderId], references: [id])

  @@map("messages")
}
